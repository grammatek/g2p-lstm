#!/bin/bash

##########################################################################
#
#  Calls fairseq-interactive with a g2p model for pronunciation of Icelandic
#  as traditionally spoken in the north east. See Readme.md for fairseq setup instructions.
#
#  The characters in the input words to transcribe have to be separated by space:
#    'h l a u p a'
#
#  Usage example: 
#    $cat wordlist.txt | ./transcribe_ice_north_east wordlist_g2p_north_east.out wordlist_g2p_north_east.tsv
#
###########################################################################

# complete output file
OUT="$1" 
# results of the g2p
TSV="$2"

fairseq-interactive \
    "data-bin/north_east" \
    --source-lang="north_east.graphemes" \
    --target-lang="north_east.phonemes" \
    --path="checkpoints/north_east-256-.3-s-s/checkpoint_last.pt" \
    --seed=1917 \
    --beam=5 \
    --no-progress-bar \
     > "${OUT}"
        # Extracts the predictions into a TSV file.
        paste \
            <(cat "${OUT}" | grep '^S-' | cut -f2) \
            <(cat "${OUT}" | grep '^H-' | cut -f3) \
            > "${TSV}"
